<% include ../partials/header %>

<!-- Home Page Search Form -->

<div class="container">
  <div class="row">
    <div class="Absolute-Center is-Responsive">
      <form class="form-horizontal">
        <fieldset>


          <!-- Search input-->
          <div class="control-group">
            <label class="control-label" for="homesearch"></label>
            <div class="controls">
              <input id="homesearch" name="homesearch" type="text" placeholder="Enter Seattle Neighborhood" class="text-center form-control input-xlarge search-query">

            </div>
          </div>

          <!-- Button -->
          <div class="control-group">
            <label class="control-label" for="homesearchbutton"></label>
            <div class="controls">
            <button id="homesearchbutton" name="homesearchbutton" class="btn btn-primary btn-block">Search</button>
            </div>
          </div>

        </fieldset>
      </form>
    </div>
  </div>
</div>





